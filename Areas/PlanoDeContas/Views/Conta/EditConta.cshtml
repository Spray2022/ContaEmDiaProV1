@model ContaEmDiaProV1.Areas.PlanoDeContas.Models.Conta

@{
    ViewData["Title"] = "Editar Conta";
}

<h2>Editar Conta</h2>

<form asp-action="EditConta" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClasseId" />

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a href="@Url.Action("IndexConta", "PlanoDeContas", new { classeId = Model.ClasseId })" class="btn btn-secondary">Cancelar</a>
</form>
