@model ContaEmDiaProV1.Areas.PlanoDeContas.Models.Classe

@{
    ViewData["Title"] = "Excluir Classe";
    Layout = "~/Areas/Principal/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Excluir Classe</h2>

<div>
    <p>Tem certeza de que deseja excluir a classe <strong>@Model.NomeClasse</strong>?</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="@Url.Action("Index", "Classe")" class="btn btn-secondary">Cancelar</a>
</form>
