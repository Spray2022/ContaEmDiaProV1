@model IEnumerable<ContaEmDiaProV1.Areas.PlanoDeContas.Models.Classe>

@{
    ViewData["Title"] = "Plano de Contas - Classes";
    Layout = "~/Areas/Principal/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Lista de Classes</h2>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>Nome da Classe</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var classe in Model)
        {
            <tr>
                <td>@classe.NomeClasse</td>
                <td>
                    <a href="@Url.Action("Edit", "Classe", new { id = classe.Id })" class="btn btn-sm btn-primary">Editar</a>
                    <a href="@Url.Action("Delete", "Classe", new { id = classe.Id })" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Classe")" class="btn btn-success">Adicionar Nova Classe</a>
